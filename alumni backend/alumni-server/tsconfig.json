{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "rootDir": "src",
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "experimentalEsm": true,
    "transpileOnly": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "src/migrate-mentors.ts",
    "src/routes/applications.ts",
    "src/routes/chats.ts",
    "src/routes/content.ts",
    "src/routes/disburse.ts",
    "src/routes/mentors.ts",
    "src/routes/payments.ts",
    "src/routes/support.ts",
    "src/routes/**/*.ts",
    "src/routes/**/*.js"
  ]
}